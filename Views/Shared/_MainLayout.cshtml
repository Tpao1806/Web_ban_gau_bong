<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<style type="text/css">
    html{
        font-size:16px;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
    }
    body{
        background-color:#808080;
    }
    #container{
        border:2px solid #f44ae4;
        border-radius:2px solid #000000
        
    }
    header{
        
        
        background-color: orangered;
        border:2px solid #00ffff;
        padding: 10px;
        display: flex;
        justify-content : space-between;
        align-items:center;
    }
    nav ul{
        list-style-type:none;
        display:flex;
    }
    nav ul li{
        margin-left:20px;
        font-size:0.9rem;
    }
    nav ul li a{
        text-decoration: none;
        color: black;
        font-weight:bold;
    }
    section{
        background-color:ghostwhite;
        min-height:300px;
    }
</style>
<body>
    <div id="container">
        <header>
            <div class="logo">
                <img src="~/Content/images/Logo.png" alt="Logo" width="60" height="59" />
            </div>
            <nav>
                <ul>
                    <li><a href="~/Home/test">Trang chủ</a></li>
                    <li><a href="~/Product/ProductDetail">Sản phẩm</a></li>
                    <li><a href="~/Product/ShoppingCart">Giỏ hàng</a></li>
                    <li><a href="~/Home/Contact">Liên hệ</a></li>
                </ul>
            </nav>
        </header>

        <section>
            @RenderBody()
        </section>
        <footer>
            Footer
        </footer>
    </div>
</body>
</html>
    